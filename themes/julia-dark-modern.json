{
    "$schema": "vscode://schemas/color-theme",
    "name": "Julia Dark Modern",
    "include": "./dark_plus.json",
    "colors": {
        "editor.background": "#1F1F1F",
        "editor.foreground": "#D4D4D4",
        "editorLineNumber.foreground": "#6E7681",
        "editorLineNumber.activeForeground": "#CCCCCC",
        "editorCursor.foreground": "#A7A7A7",
        "sideBar.background": "#1E1E1E",
        "sideBar.foreground": "#D4D4D4",
        "activityBar.background": "#181818",
        "statusBar.background": "#181818",
        "tab.activeBackground": "#1F1F1F",
        "tab.activeForeground": "#FFFFFF",
        "tab.inactiveBackground": "#2B2B2B",
        "tab.inactiveForeground": "#CCCCCC"
    },
    "tokenColors": [
        {
            "scope": "comment",
            "settings": {
                "foreground": "#6A9955", // Green for comments
                "fontStyle": "italic"
            }
        },
        {
            "scope": [
                "keyword.control",
                "keyword.other",
                "keyword.import",
                "keyword.using",
                "keyword.function",
                "storage.type.function.julia"
            ],
            "settings": {
                "foreground": "#C586C0" // Purple for keywords and import
            }
        },
        {
            "scope": [
                "variable",
                "meta.definition.variable",
                "meta.variable.assignment.julia"
            ],
            "settings": {
                "foreground": "#9CDCFE" // Light blue for variables
            }
        },
        {
            "scope": [
                "entity.name.function",
                "support.function",
                "meta.function-call"
            ],
            "settings": {
                "foreground": "#DCDCAA" // Yellow for function names
            }
        },
        {
            "scope": [
                "entity.name.type",
                "entity.name.class",
                "support.type",
                "support.class",
                "storage.type.julia"
            ],
            "settings": {
                "foreground": "#4EC9B0" // Teal for classes, types, structs
            }
        },
        {
            "scope": [
                "string",
                "constant.other",
                "string.quoted",
                "string.quoted.double",
                "string.quoted.single"
            ],
            "settings": {
                "foreground": "#CE9178" // Yellowish for strings
            }
        },
        {
            "scope": [
                "constant.numeric",
                "constant.character",
                "constant.other.symbol.julia"
            ],
            "settings": {
                "foreground": "#b5cea8" // Light green for numbers, characters, and symbols
            }
        },
        {
            "scope": [
                "constant.other.constant.julia",
                "variable.other.constant.julia"
            ],
            "settings": {
                "foreground": "#D4D4D4", // White for constants
                "fontStyle": "bold"
            }
        },
        {
            "scope": [
                "entity.other.attribute-name",
                "meta.attribute.julia"
            ],
            "settings": {
                "foreground": "#9cdcfe" // Light blue for attributes
            }
        }
    ],
    "semanticTokenColors": {
        "variable": "#9CDCFE", // Light blue for variables
        "function": "#DCDCAA", // Yellow for functions
        "parameter": "#9CDCFE", // Light blue for parameters
        "type": "#4EC9B0", // Teal for types
        "class": "#4EC9B0", // Teal for classes
        "struct": "#4EC9B0", // Teal for classes
        "interface": "#4EC9B0", // Teal for interfaces
        "enum": "#4EC9B0", // Teal for enums
        "enumMember": "#4FC1FF", // Light blue for enum members
        "property": "#9CDCFE", // Light blue for properties
        "keyword": "#C586C0", // Purple for keywords
        "string": "#CE9178", // Yellowish for strings
        "number": "#b5cea8", // Light green for numbers
        "boolean": "#569cd6", // Blue for booleans
        "typeParameter": "#4EC9B0", // Teal for type parameters
    }
}